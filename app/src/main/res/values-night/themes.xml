<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Base.Theme.Localisation_sender_with_speech" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/success_green</item>
        <item name="colorSecondaryVariant">@color/success_green</item>
        <item name="colorOnSecondary">@color/text_white</item>
        
        <!-- Background colors for dark mode -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/text_white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Localisation_sender_with_speech" parent="Base.Theme.Localisation_sender_with_speech" />
</resources>