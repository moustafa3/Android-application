<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Card Styles -->
    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="SuccessButton" parent="PrimaryButton">
        <item name="backgroundTint">@color/success_green</item>
    </style>
    
    <style name="DangerButton" parent="PrimaryButton">
        <item name="backgroundTint">@color/danger_red</item>
    </style>
    
    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="SectionTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="StatusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="BodyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="SuccessText" parent="BodyText">
        <item name="android:textColor">@color/success_green</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="WarningText" parent="BodyText">
        <item name="android:textColor">@color/warning_orange</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DangerText" parent="BodyText">
        <item name="android:textColor">@color/danger_red</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Input Styles -->
    <style name="InputField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    
</resources> 